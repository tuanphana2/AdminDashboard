<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/loginLayout.css">
</head>
<body>
    <header class="bg-light shadow-sm py-2 d-flex align-items-center">
        <a class="navbar-brand fw-bold text-primary ms-2" asp-controller="Home" asp-action="Index">AdminDashboard</a>
    </header>
    <main class="mainContent">
        @RenderBody()
    </main>

    <footer class="text-center py-3 bg-light shadow">
        <p>© 2024 Admin Dashboard</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
