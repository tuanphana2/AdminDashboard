@model AdminDashboard.Models.Notification

<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Notification</h2>

    <p>Are you sure you want to delete this notification?</p>

    <dl class="row mb-4">
        <dt class="col-sm-3 font-weight-bold">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3 font-weight-bold">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .container {
            max-width: 600px;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 600;
        }

        .btn {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
        }

        .font-weight-bold {
            font-weight: 500;
        }

        .d-flex .btn {
            margin-top: 20px;
        }
    </style>
}
