@model AdminDashboard.Models.Admin

<div class="container mt-4">
    <h2 class="text-primary">Admin Details</h2>
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Image" alt="Admin Image" class="img-fluid rounded-circle mb-3" style="max-width: 150px;">
                </div>
                <div class="col-md-8">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <a href="@Url.Action("Edit", "Admin", new { id = Model.Id })" class="btn btn-warning">Edit Info</a>
                    <a href="@Url.Action("ChangePassword", "Admin", new { id = Model.Id })" class="btn btn-primary">Change Password</a>
                    <hr />
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to home</a>
                </div>
            </div>
        </div>
    </div>
</div>
