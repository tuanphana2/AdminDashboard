@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0" style="background-color: #f9f9f9;">
            <div class="card-body text-center">
                <h5 class="card-title" style="color: darkblue; font-weight: bold;">Users Created in Last 3 Months</h5>
                <p class="display-4" style="color: darkblue;">@ViewData["RecentUserCount"]</p>
                <a href="@Url.Action("Index", "User")" class="btn" style="border-color: darkblue; color: darkblue; margin-top: 1rem;">Manage Users</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0" style="background-color: #f9f9f9;">
            <div class="card-body text-center">
                <h5 class="card-title" style="color: forestgreen; font-weight: bold;">Events This Month</h5>
                <p class="display-4" style="color: forestgreen;">@ViewData["EventCountThisMonth"]</p>
                <a href="@Url.Action("Index", "Event")" class="btn" style="border-color: forestgreen; color: forestgreen; margin-top: 1rem;">Manage Events</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card" style="height: 400px; width: 400px; margin: auto; background-color: #fff; border: 1px solid #e9ecef;">
            <div class="card shadow-sm border-0">
                @await Html.PartialAsync("_UserRoleChartPartial")
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4" style="flex: 2">
        <div class="card" style="height: 400px; width: 717px; margin: auto; margin-right: 0; background-color: #fff; border: 1px solid #e9ecef;">
            <div class="card shadow-sm border-0">
                @await Html.PartialAsync("_CategoryEventChartPartial")
            </div>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        background-color: #28a745 !important;
        color: #fff !important;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8 !important;
        color: #fff !important;
    }

    h5.card-title {
        font-family: 'Roboto', sans-serif;
    }

    .card {
        border-radius: 10px;
    }

    .display-4 {
        font-weight: 700;
    }
</style>
