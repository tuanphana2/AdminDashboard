@model AdminDashboard.Models.User

<div class="container">
    <h2 class="text-danger mb-4">Delete User</h2>

    <p class="mb-4">Are you sure you want to delete this user? This action cannot be undone.</p>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-start gap-3">
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="ManageLoginStatus" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .container {
            max-width: 600px;
        }

        h2 {
            font-size: 1.75rem;
            font-weight: 600;
        }

        p {
            font-size: 1rem;
        }

        dl {
            font-size: 1rem;
        }

        .btn {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
        }
    </style>
}
